    "github",
    "pull-request",
    "update"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": [
    {
      "type": "github",
      "url": " https://github.com/sponsors/DiegoRamil"
    }
  ],
  "lint-staged": {
    "!(bin/*|Makefile)": [
      "make all",
      "prettier --write"
