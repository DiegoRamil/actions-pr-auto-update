    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "rollup": "^4.27.0",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "3.4.2",
    "prettier-eslint":"16.3.0",
    "prettier-package-json": "^2.8.0",
    "semantic-release": "24.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
